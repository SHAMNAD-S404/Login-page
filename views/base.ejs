<%-include('header')-%>

    <div class="text-center center-div row" id="login">
        <div class="container w-15  border py-15 col-md-5  col-10">
            <div class="title pb-5 m-4">
                <h2 class="font-weight-bold">Login Page</h2>
                <span>Login for the existing user</span>
                <% if(locals.Logout){%>
                    <div class="alert alert-success text-center">
                        <%=Logout%>
                    </div>
                    <%}%>
            </div>
            <form action="/route/login" method="POST">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Enter email id" name="email">
                    <small class="form-text text-muted text-left">Registered email address</small>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Enter password">

                </div>
                <button class="btn btn-success rounded-pill" type="submit">Submit</button>
            </form>
        </div>
    </div>

    <%-include('footer')-%>